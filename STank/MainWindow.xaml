<Controls:MetroWindow 
    x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    Title="Siemens Shark Tank Find and Replace Tool" Height="auto" Width="auto"
    BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
   WindowStartupLocation="CenterScreen"
    Loaded="IntializeMainWindow">
    
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
            <MenuItem x:Name="LoadData" Header="_Open" Click="LoadData_Click_1"></MenuItem>
                <MenuItem x:Name="SaveData" Header="_Save" Click="LoadData_Click_1"></MenuItem>
                <MenuItem x:Name="Exit" Header="_Exit" Click="LoadData_Click_1"></MenuItem>
            </MenuItem>

            <MenuItem Header="_Documentation">
                <MenuItem x:Name="ShowDocumentation" Header="_Documentation" Click="LoadData_Click_1"></MenuItem>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem x:Name="Help" Header="_Help" Click="LoadData_Click_1"></MenuItem>
            </MenuItem>

            <MenuItem Header="_About">
                <MenuItem x:Name="About" Header="_About" Click="LoadData_Click_1"></MenuItem>
            </MenuItem>
        </Menu>

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="150"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Label Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">Shark Tank Find and Replace Tool</Label>
            <StackPanel Grid.Row="1" Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                    <Button Style="{StaticResource AccentedSquareButtonStyle}" Margin="10 10 0 0"  BorderBrush="{DynamicResource AccentColorBrush}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="auto" Click="browseDirectoryClicked">Set Working Directory</Button>
                    <Button Style="{StaticResource AccentedSquareButtonStyle}" Margin="10 10 0 0"  BorderBrush="{DynamicResource AccentColorBrush}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="auto" Click="browseNameClicked">Set Name Change Document</Button>
                    <Button Style="{StaticResource AccentedSquareButtonStyle}" Margin="10 10 0 0"  BorderBrush="{DynamicResource AccentColorBrush}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="auto" Click="browseAttributeClicked">Set Panel Attribute Document</Button>
                </StackPanel>
                    <StackPanel Orientation="Horizontal">
                <Label  HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="12">Current Working Directory Path:</Label>
                <TextBox x:Name="workingDirectory" IsEnabled="False" Text="{Binding Path=Directory.Path, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label  HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="12">Name Change Document Path:</Label>
                    <TextBox x:Name="nameChangeDocument" IsEnabled="False" Text="{Binding Path=Directory.NameChangeDocument.Path, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0"></TextBox>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                <Label  HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="12">Panel Attributes Document:</Label>
                <TextBox x:Name="panelAttributesDocument" IsEnabled="False" Text="{Binding Path=Directory.PanelAttributesDocument.Path, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0"></TextBox>
                </StackPanel>
                
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1">
                <Label HorizontalAlignment="Right" Width="Auto">Missing Dependancies</Label>
            </StackPanel>

            <Rectangle Grid.Row="4" Grid.ColumnSpan="2" Fill="AliceBlue" Margin="0,0.4,-158.4,0.4" />


            <ScrollViewer Grid.Row="2">
                <StackPanel Grid.Row="2">
                    <Button Style="{StaticResource AccentedSquareButtonStyle}" Margin="10 10 0 0"  BorderBrush="{DynamicResource AccentColorBrush}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="auto" Click="showConnectionView">Add New Connection</Button>
                    <Label  HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18">Active Comm Ports:</Label>
                    <ListBox x:Name="serialPortList" SelectionChanged="LoadData_Click_1" ItemsSource="{Binding }">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Port.PortName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Style="{StaticResource AccentedSquareButtonStyle}" Margin="10 10 0 0"  BorderBrush="{DynamicResource AccentColorBrush}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="auto" Click="findAndReplaceClicked">Run Find and Replace</Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Controls:MetroWindow>
